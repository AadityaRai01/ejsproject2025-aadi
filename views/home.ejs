<div
  class="container d-flex align-items-center justify-content-center min-vh-100"
  style="
    background-image: url('/images/circuits-blue-red-gradient-digit.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  "
>
  <div
    class="row shadow rounded-5 p-3 p-md-4"
    style="
      background: rgba(0,0,0,0.15);
      backdrop-filter: blur(12px);
      width: 95%;
      max-width: 800px;
      margin: auto;
      border: 1px solid rgba(255, 255, 255, 0.2);
    "
  >
    <!-- Left Box: Logo & Title -->
    <div
      class="col-md-6 d-flex align-items-center justify-content-center flex-column rounded-3 mb-3 mb-md-0"
      style="
        background: linear-gradient(145deg, #64a4df20, #5489bb15);
        box-shadow: 5px 5px 20px #3d648920, -5px -5px 20px #7dcbff15;
        border-radius: 15px;
        padding: 30px 20px;
        text-align: center;
      "
    >
      <h2 class="text-light mb-4" style="font-weight: 600; letter-spacing: 1px;">Welcome Back</h2>
      <div
        style="
          height: 150px;
          width: 150px;
          border-radius: 50%;
          border: 5px solid rgba(255,255,255,0.3);
          box-shadow: inset 3px 3px 8px rgba(0,0,0,0.1), inset -3px -3px 8px rgba(255,255,255,0.2);
          overflow: hidden;
        "
      >
        <img
          src="/images/Untitled.png"
          class="img-fluid rounded-circle"
          alt="logo"
          width="140px"
        />
      </div>
      <p class="text-light mt-3" style="font-size: 0.9rem;">
        Enter your credentials to access your account
      </p>
    </div>

    <!-- Right Box: Login Form -->
<div class="col-md-6 d-flex align-items-center justify-content-center">
  <form
    action="/login"
    method="post"
    style="
      background:transparent;
      backdrop-filter: blur(12px);
      padding: 30px 25px;
      border-radius: 5px;
      width: 100%;
      max-width: 320px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.25);
    "
  >
    <!-- Email -->
    <div style="margin-bottom: 20px;">
      <label class="form-label" style="color: #fff; font-weight: 500; font-size: 0.95rem;">Email</label>
      <input
        type="email"
        placeholder="Enter your email"
        name="email"
        style="
          width: 100%;
          padding: 12px;
          border-radius: 10px;
          border: none;
          background: rgba(255, 255, 255, 0.25);
          color: #fff;
          font-size: 0.95rem;
          transition: all 0.3s ease;
        "
        onmouseover="this.style.background='rgba(255, 255, 255, 0.45)'; this.style.boxShadow='0 0 8px rgba(255,255,255,0.5)';"
        onmouseout="this.style.background='rgba(255, 255, 255, 0.25)'; this.style.boxShadow='none';"
      />
    </div>

    <!-- Password -->
    <div style="margin-bottom: 20px;">
      <label class="form-label" style="color: #fff; font-weight: 500; font-size: 0.95rem;">Password</label>
      <input
        type="password"
        placeholder="Enter your password"
        name="password"
        style="
          width: 100%;
          padding: 12px;
          border-radius: 10px;
          border: none;
          background: rgba(255, 255, 255, 0.25);
          color: #fff;
          font-size: 0.95rem;
          transition: all 0.3s ease;
        "
        onmouseover="this.style.background='rgba(255, 255, 255, 0.45)'; this.style.boxShadow='0 0 8px rgba(255,255,255,0.5)';"
        onmouseout="this.style.background='rgba(255, 255, 255, 0.25)'; this.style.boxShadow='none';"
      />
    </div>

    <!-- Login Button -->
    <input
      type="submit"
      value="Login"
      style="
        width: 100%;
        padding: 12px;
        border-radius: 50px;
        border: .5px solid grey ;
        background: transparent;
        color: #fff;
        font-weight: 600;
        font-size: 1rem;
        box-shadow: 0 4px 8px rgba(56, 1, 1, 0.25);
        cursor: pointer;
        transition: all 0.3s ease;
        margin-bottom: 10px;
      "
      onmouseover="this.style.boxShadow='0 6px 12px rgba(0,0,0,0.35)'; this.style.transform='translateY(-2px)';
      this.style.background='linear-gradient(90deg, #e4273754, #34147057)'; this.style.border='none';"
      onmouseout="this.style.boxShadow='0 4px 8px rgba(0,0,0,0.25)'; this.style.transform='translateY(0)'; this.style.background='transparent'; this.style.border='.5px solid grey';"
    />

    <!-- Sign Up Prompt as Anchor -->
    <p style="text-align: center; margin-top: 15px; color: #fff; font-size: 0.9rem;">
      Donâ€™t have an account? 
      <a href="/user/signup" style="color: #4facfe; text-decoration: underline;">Sign Up</a>
    </p>
  </form>
</div>


  </div>
</div>


